<!DOCTYPE html>
<html>
<head>
  <title>Admin Blog List</title>
  <link href="https://cdn.tailwindcss.com" rel="stylesheet">
</head>
<body class="bg-gray-900 text-white p-8">
  <h1 class="text-3xl font-bold mb-6">All Blogs</h1>
  <a href="/admin/add-blog" class="bg-blue-600 text-white px-4 py-2 rounded mb-4 inline-block">Add New Blog</a>
  <table class="w-full text-left mt-4">
    <thead>
      <tr>
        <th class="p-2">ID</th>
        <th class="p-2">Title</th>
        <th class="p-2">Href</th>
        <th class="p-2">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% blogs.forEach(blog => { %>
        <tr class="border-b border-gray-700">
          <td class="p-2"><%= blog._id %></td>
          <td class="p-2"><%= blog.title %></td>
          <td class="p-2"><%= blog.href %></td>
          <td class="p-2">
            <a href="/admin/edit-blog/<%= blog._id %>" class="text-blue-400 underline">Edit</a>
            <form method="POST" action="/admin/delete-blog/<%= blog._id %>" style="display:inline;">
              <button type="submit" class="text-red-400 underline ml-2" onclick="return confirm('Delete this blog?')">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>