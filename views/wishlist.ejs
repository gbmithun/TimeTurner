      flex: 1 1 auto;
      height: auto;
    }
    .watch-content > .flex {
      flex-direction: row;
      justify-content: center;
      gap: 0.5rem;
      align-items: center;
      flex-wrap: wrap;
      margin-top: 1rem;
    }

    /* MOBILE: image top, content & buttons below, overlay style */
