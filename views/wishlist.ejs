      .watch-img-container {
        width: 100%;
        height: 220px;
        min-width: unset;
        max-width: unset;
        padding-right: 0;
        display: flex;
        align-items: center;
        justify-content: center;
      }
      .watch-img-container img {
        height: 100%;
        width: 100%;
        object-fit: contain;
      }
      .watch-content {
        width: 100%;
        padding: 1rem 1.25rem 1.25rem 1.25rem;
        min-height: 0;
        display: flex;
